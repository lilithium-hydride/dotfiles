#	natural_scroll disabled
#}

input "1133:49284:Logitech_G203_Prodigy_Gaming_Mouse_Keyboard" {
	natural_scroll disabled
}

#input "2:7:SynPS/2_Synaptics_TouchPad" {
#	tap enabled
#	natural_scroll enabled
#	dwt enabled
#	middle_emulation enabled
#}

input type:mouse {
	accel_profile "flat"
	pointer_accel 0
	natural_scroll disabled
}

input type:touchpad {
	tap enabled
	natural_scroll enabled
	dwt enabled
	middle_emulation enabled
}


